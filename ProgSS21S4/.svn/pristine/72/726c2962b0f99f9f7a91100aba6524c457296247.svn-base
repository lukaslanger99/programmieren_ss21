package de.ostfalia.prog.s21ss.s4.model;

import de.ostfalia.prog.s21ss.s4.base.Farbe;

public class Wuerfel {
	Farbe color;
	int value;

	/***
	 * Konstruktor
	 * 
	 * @param color
	 * @param value
	 */
	public Wuerfel(Farbe color, int value) {
		this.color = color;
		this.value = value;
	}

	/***
	 * liefert farbe
	 * 
	 * @return color
	 */
	public Farbe getColor() {
		return color;
	}

	/***
	 * liefert anzahl der augen
	 * 
	 * @return value
	 */
	public int getValue() {
		return value;
	}
}
